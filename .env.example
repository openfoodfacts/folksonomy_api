# docker compose configs
COMPOSE_FILE_RUN=docker-compose.yml
# use specific path separator for compat windows / linux
COMPOSE_PATH_SEPARATOR=,
COMPOSE_FILE=${COMPOSE_FILE_RUN},docker/dev.yml
RESTART_POLICY=no
TAG=latest

# Database Configuration
POSTGRES_USER=folksonomy
POSTGRES_PASSWORD=folksonomy
POSTGRES_HOST=folksonomy_db
POSTGRES_DATABASE=folksonomy

# Authentication Configuration
FOLKSONOMY_PREFIX=api.folksonomy
AUTH_PREFIX=world
# Uncomment and set if needed
# AUTH_SERVER_STATIC=https://world.openfoodfacts.org

# Security Settings
FAILED_AUTH_WAIT_TIME=2

# Test User Credentials (Optional)
OFF_TEST_USER=
OFF_TEST_PASSWORD=

# Environment Configuration
ENVIRONMENT=development
LOGGING_LEVEL=INFO

# API Port Exposure (optional, defaults to 8000)
# Uncomment and set to expose on a different port
# API_EXPOSE=8080

# Database Port Exposure (optional, defaults to 5433)
# Uncomment and set to expose on a different port
# DB_EXPOSE=5434

# Restart Policy (default is 'no')
# Options: 'no', 'always', 'on-failure', 'unless-stopped'
# RESTART_POLICY=unless-stopped

# local network shared with Product Opener
# use docker network create po_off_default if it does not exists
COMMON_NET_NAME=po_off_default
